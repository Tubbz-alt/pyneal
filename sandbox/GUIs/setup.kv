#kivy 1.10.0
MainContainer:

<MainContainer>:
    orientation: 'vertical'
    # custom Properties
    #scannerPortInput: scannerPortInput
    ### Logo Box ------------------------
    BoxLayout:
        size_hint_y: 2
        canvas:
            Color:
                rgb: 1,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Pyneal Logo'
        Button:
            text: 'Load Settings'
            on_release: root.show_loadSettingsDialog()


    ### Communication Box ------------------
    BoxLayout:
        size_hint_y: 3
        canvas:
            Color:
                rgb: .8,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            # box label
            Label:
                text: 'Communication'
            # scanner port
            BoxLayout:
                Label:
                    text: 'Scanner Port:'
                TextInput:
                    id: scannerPort
                    text: str(root.GUI_settings.scannerPort)
                    size_hint_x: 1.5
            # output port
            BoxLayout:
                Label:
                    text: 'Output Port:'
                TextInput:
                    id: outputPort
                    text: str(root.GUI_settings.outputPort)
                    size_hint_x: 1.5


    ### Preprocessing Box ------------------
    BoxLayout:
        size_hint_y: 2
        canvas:
            Color:
                rgb: .6,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            # box label
            Label:
                text: 'Preprocessing'
            # num timepts
            BoxLayout:
                Label:
                    text: '# of timepts:'
                TextInput:
                    id: numTimepts
                    text: str(root.GUI_settings.numTimepts)
                    size_hint_x: 1.5

    ### Mask Box ------------------
    BoxLayout:
        size_hint_y: 4
        canvas:
            Color:
                rgb: .4,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            # box label
            Label:
                text: 'Mask'

    ### Stats Box ------------------
    BoxLayout:
        size_hint_y: 2
        canvas:
            Color:
                rgb: .2,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            # box label
            Label:
                text: 'Stats'
            # buttons
            BoxLayout:
                ToggleButton:
                    id: statsChoice_average
                    text: 'Average'
                    group: 'statsChoice'
                    on_state: root.setStatChoice('Average')
                ToggleButton:
                    id: statsChoice_median
                    text: 'Median'
                    group: 'statsChoice'
                    on_state: root.setStatChoice('Median')
                ToggleButton:
                    id: statsChoice_custom
                    text: 'Custom'
                    group: 'statsChoice'
                    on_state: root.setStatChoice('Custom')

    ### Submit Box ------------------
    BoxLayout:
        size_hint_y: 2
        canvas:
            Color:
                rgb: 0,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            # box label
            Label:
                text: 'Submit'
            Button:
                text: 'Submit'
                on_release: root.submitGUI()

### Load Settings File Dialog Window #################################
<LoadSettingsDialog>:
    BoxLayout:
        font_size: '10sp'
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: '/Users/jeff/gDrive/jeffCloud/real-time'
            filters: ['*.yaml']

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Load"
                on_release: root.loadSettings(filechooser.path, filechooser.selection)
            Button:
                text: "Cancel"
                on_release: root.cancelSettings()
