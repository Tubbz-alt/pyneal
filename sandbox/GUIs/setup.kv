#kivy 1.10.0
#:import split os.path.split

MainContainer:

<MainContainer>:
    orientation: 'vertical'
    # custom Properties
    ### Logo Box ------------------------
    BoxLayout:
        size_hint_y: 2
        canvas:
            Color:
                rgb: 1,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Pyneal Logo'
        Button:
            text: 'Load Settings'
            on_release: root.show_loadFileDialog(path='~/', fileFilter=['*.yaml'], loadFunc=root.loadSettings)


    ### Communication Box ------------------
    BoxLayout:
        size_hint_y: 3
        canvas:
            Color:
                rgb: .8,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            # box label
            Label:
                text: 'Communication'
            # scanner port
            BoxLayout:
                Label:
                    text: 'Scanner Port:'
                TextInput:
                    id: scannerPort
                    text: str(root.GUI_settings.scannerPort)
                    size_hint_x: 1.5
                    on_text: root.GUI_settings.scannerPort = scannerPort.text
            # output port
            BoxLayout:
                Label:
                    text: 'Output Port:'
                TextInput:
                    id: outputPort
                    text: str(root.GUI_settings.outputPort)
                    size_hint_x: 1.5
                    on_text: root.GUI_settings.outputPort = outputPort.text


    ### Mask Box ------------------
    BoxLayout:
        size_hint_y: 4
        canvas:
            Color:
                rgb: .6,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            # box label
            Label:
                # box label
                text: 'Mask'
            BoxLayout:
                # mask info
                Label:
                    id: maskFile
                    text: root.GUI_settings.maskFile
                # load mask button
                Button:
                    text: 'Load Mask'
                    on_release: root.show_loadFileDialog(path='~/', fileFilter=['*.nii.gz'], loadFunc=root.loadMask)
            BoxLayout:
                CheckBox:
                    id: maskBinarizeChoice
                    size_hint_x: .25
                    state: 'down' if root.GUI_settings.maskBinarizeChoice else 'normal'
                    on_active: root.setMaskBinarizeChoice()
                Label:
                    text: 'Binarize Mask?'


    ### Preprocessing Box ------------------
    BoxLayout:
        size_hint_y: 2
        canvas:
            Color:
                rgb: .4,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            # box label
            Label:
                text: 'Preprocessing'
            # num timepts
            BoxLayout:
                Label:
                    text: '# of timepts:'
                TextInput:
                    id: numTimepts
                    text: str(root.GUI_settings.numTimepts)
                    size_hint_x: 1.5
                    on_text: root.GUI_settings.numTimepts = numTimepts.text


    ### Stats Box ------------------
    BoxLayout:
        size_hint_y: 2
        canvas:
            Color:
                rgb: .2,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            # box label
            Label:
                text: 'Stats'
            # buttons
            BoxLayout:
                ToggleButton:
                    id: statsChoice_average
                    text: 'Average'
                    group: 'statsChoice'
                    state: 'down' if root.GUI_settings.statsChoice == 'Average' else 'normal'
                    on_release: root.setStatsChoice('Average')
                ToggleButton:
                    id: statsChoice_median
                    text: 'Median'
                    group: 'statsChoice'
                    state: 'down' if root.GUI_settings.statsChoice == 'Median' else 'normal'
                    on_release: root.setStatsChoice('Median')
                ToggleButton:
                    id: statsChoice_custom
                    text: 'Custom'
                    group: 'statsChoice'
                    state: 'down' if root.GUI_settings.statsChoice not in ['Average', 'Median'] else 'normal'
                    on_release: root.show_loadFileDialog(path='~/', fileFilter=['*.py'], loadFunc=root.loadCustomStats)
            Label:
                text: '' if root.GUI_settings.statsChoice in ['Average', 'Median'] else ('Custom stats: ' + split(root.GUI_settings.statsChoice)[1])

    ### Submit Box ------------------
    BoxLayout:
        size_hint_y: 2
        canvas:
            Color:
                rgb: 0,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            # box label
            Label:
                text: 'Submit'
            Button:
                text: 'Submit'
                on_release: root.submitGUI()


### Generic Load File Dialog Window #################################
<LoadFileDialog>:
    BoxLayout:
        font_size: '10sp'
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: root.path
            filters: root.fileFilter
            font_name: 'Roboto-Bold'

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Load"
                on_release: root.loadFunc(filechooser.path, filechooser.selection)
            Button:
                text: "Cancel"
                on_release: root.cancelFileChooser()



### Error Notification Pop-up Window #################################
<ErrorNotification>:
    BoxLayout:
        Label:
            text_size: self.size
            valign: 'top'
            text: root.errorMsg
