#kivy 1.10.0
MainContainer:

<MainContainer>:
    orientation: 'vertical'
    # custom Properties

    ### Logo Box ------------------------
    BoxLayout:
        size_hint_y: 2
        canvas:
            Color:
                rgb: 1,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Pyneal Logo'
        Button:
            text: 'Load Settings'
            on_release: root.show_loadSettingsDialog()


    ### Communication Box ------------------
    BoxLayout:
        size_hint_y: 3
        canvas:
            Color:
                rgb: .8,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            # box label
            Label:
                text: 'Communication'
            # scanner port
            BoxLayout:
                Label:
                    text: 'Scanner Port:'
                TextInput:
                    text: root.scannerPort_setting
                    size_hint_x: 1.5
            # output port
            BoxLayout:
                Label:
                    text: 'Output Port:'
                TextInput:
                    text: root.outputPort_setting
                    size_hint_x: 1.5


    ### Preprocessing Box ------------------
    BoxLayout:
        size_hint_y: 2
        canvas:
            Color:
                rgb: .6,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            # box label
            Label:
                text: 'Preprocessing'
            # num timepts
            BoxLayout:
                Label:
                    text: '# of timepts:'
                TextInput:
                    text: root.numTimepts_setting
                    size_hint_x: 1.5

    ### Mask Box ------------------
    BoxLayout:
        size_hint_y: 4
        canvas:
            Color:
                rgb: .4,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            # box label
            Label:
                text: 'Mask'

    ### Stats Box ------------------
    BoxLayout:
        size_hint_y: 2
        canvas:
            Color:
                rgb: .2,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            # box label
            Label:
                text: 'Stats'
            # buttons
            BoxLayout:
                Button:
                    text: 'Average'
                Button:
                    text: 'Median'
                Button:
                    text: 'Custom'

    ### Submit Box ------------------
    BoxLayout:
        size_hint_y: 2
        canvas:
            Color:
                rgb: 0,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            # box label
            Label:
                text: 'Submit'
            Button:
                text: 'Submit'

### Load Settings File Dialog Window #################################
<LoadSettingsDialog>:
    BoxLayout:
        font_size: '10sp'
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: '/Users/jeffmacinnes/Desktop'
            filters: ['*.yaml']

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Load"
                on_release: root.loadSettings(filechooser.path, filechooser.selection)
            Button:
                text: "Cancel"
                on_release: root.cancelSettings()
