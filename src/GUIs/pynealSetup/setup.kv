#kivy 1.10.0
#:import split os.path.split
MainContainer:

<SectionHeading>:
    padding_y: 10.0
    Label:
        pos: [50+10, self.pos[1]]
        size: (100, 20)
        id: sectionLabel
        text: root.labelText
        #size_hint_y: .8
        font_size: 35
        bold: True
        valign: 'middle'
        halign: 'left'
        text_size: self.size
        color: (1,1,1,1)
        canvas.before:
            Color:
                #rgba: .96,.15,.35,1
                rgba: .78, .25, .33, 1
            Line:
                points: 25, self.center_y, self.width, self.center_y
                width: 3.0
                cap: 'square'
            Color:
                rgba: .78, .25, .33, 1
                #rgba: .96,.15,.35,1
            Rectangle:
                pos: [50, self.center_y-30]
                size: [300, 60]


<NumberInputField>:
    multiline: False
    write_tab: False
    width: 100

<IP_inputField>:
    multiline: False
    write_tab: False

<FilePathInputField>:
    multiline: False
    write_tab: False


<MainContainer>:
    padding: root.width * .02, root.height * .02
    spacing: "10dp"
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: 'vertical'
    ### Logo Box ------------------------
    BoxLayout:
        size_hint: (1, None)
        height: 210
        Image:
            size_hint_x: 1.5
            source: root.setupGUI_dir + '/images/pynealLogo.png'
        BoxLayout:
            orientation: 'vertical'
            Image:
                size_hint_y: 1.5
                source:  root.setupGUI_dir + '/images/pynealText.png'
            Button:
                size_hint: (1, None)
                text: 'Load Settings'
                size: [100,60]
                on_release: root.show_loadFileDialog(path='~/', fileFilter=['*.yaml'], loadFunc=root.loadSettings, cancelFunc=root.closeFileBrowser)


    ### Communication Box ------------------
    BoxLayout:
        size_hint: (1,None)
        height: 240
        BoxLayout:
            spacing: 10
            orientation: 'vertical'
            # box label
            SectionHeading:
                labelText: 'Communication'
            # pyneal host IP
            BoxLayout:
                padding: [20, 5]
                spacing: 10
                Label:
                    size_hint_x: 1.5
                    padding: [30, 0]
                    text_size: self.size
                    text: 'Pyneal Host IP:'
                    color: root.textColor
                    halign: 'right'
                    valign: 'middle'
                IP_inputField:
                    id: pynealHost
                    text: str(root.GUI_settings.pynealHost)
                    on_text: root.GUI_settings.pynealHost = pynealHost.text
            # scanner port
            BoxLayout:
                padding: [20, 5]
                spacing: 10
                Label:
                    size_hint_x: 1.5
                    padding: [30, 0]
                    text_size: self.size
                    text: 'Pyneal-Scanner Port:'
                    color: root.textColor
                    halign: 'right'
                    valign: 'middle'
                NumberInputField:
                    id: pynealScannerPort
                    text: str(root.GUI_settings.pynealScannerPort)
                    on_text: root.GUI_settings.pynealScannerPort = pynealScannerPort.text
            # Results Server port
            BoxLayout:
                padding: [20, 5]
                spacing: 10
                Label:
                    size_hint_x: 1.5
                    padding: [30, 0]
                    text_size: self.size
                    text: 'Results Server Port:'
                    color: root.textColor
                    halign: 'right'
                    valign: 'middle'
                NumberInputField:
                    id: resultsServerPort
                    text: str(root.GUI_settings.resultsServerPort)
                    on_text: root.GUI_settings.resultsServerPort = resultsServerPort.text


    ### Mask Box ------------------
    BoxLayout:
        size_hint: (1, None)
        height: 240
        BoxLayout:
            spacing: 10
            orientation: 'vertical'
            # box label
            SectionHeading:
                labelText: 'Mask'
            BoxLayout:
                spacing: 10
                padding: [30, 5]
                Label:
                    size_hint_x: 2.5
                    padding: [20, 15]
                    text_size: (500, None)
                    shorten: True
                    shorten_from: 'left'
                    id: maskFile
                    text: root.GUI_settings.maskFile
                    font_size: 28
                    color: root.textColor
                # change mask button
                Button:
                    text: 'Change'
                    on_release: root.modifyMaskPath(currentMaskPath=root.GUI_settings.maskFile)
            BoxLayout:
                BoxLayout:
                    size_hint_x: 1.5
                CheckBox:
                    halign: 'right'
                    id: maskIsWeighted
                    state: 'down' if root.GUI_settings.maskIsWeighted else 'normal'
                    on_active: root.setMaskIsWeighted()
                Label:
                    text: 'Weighted Mask?'
                    color: root.textColor
                    halign: 'left'
                BoxLayout:
                    size_hint_x: 1.5


    ### Preprocessing Box ------------------
    BoxLayout:
        size_hint: (1, None)
        height: 130
        BoxLayout:
            orientation: 'vertical'
            # box label
            SectionHeading:
                labelText: 'Preprocessing'
            # num timepts
            BoxLayout:
                padding: [20, 5]
                spacing: 10
                Label:
                    size_hint_x: 2.5
                    padding: [30, 0]
                    text_size: self.size
                    text: '# of timepts:'
                    color: root.textColor
                    halign: 'right'
                    valign: 'middle'
                NumberInputField:
                    id: numTimepts
                    text: str(root.GUI_settings.numTimepts)
                    on_text: root.GUI_settings.numTimepts = numTimepts.text


    ### Analysis Box ------------------
    BoxLayout:
        size_hint: (1, None)
        height: 260
        BoxLayout:
            orientation: 'vertical'
            # box label
            SectionHeading:
                labelText: 'Analysis'
            # buttons
            BoxLayout:
                #padding: [0, 20, 0, 0]
                padding: [45, 20]
                ToggleButton:
                    id: analysisChoice_average
                    text: 'Average'
                    group: 'analysisChoice'
                    state: 'down' if root.GUI_settings.analysisChoice == 'Average' else 'normal'
                    on_release: root.setAnalysisChoice('Average')
                ToggleButton:
                    id: analysisChoice_median
                    text: 'Median'
                    group: 'analysisChoice'
                    state: 'down' if root.GUI_settings.analysisChoice == 'Median' else 'normal'
                    on_release: root.setAnalysisChoice('Median')
                ToggleButton:
                    id: analysisChoice_custom
                    text: 'Custom'
                    group: 'analysisChoice'
                    state: 'down' if root.GUI_settings.analysisChoice not in ['Average', 'Median'] else 'normal'
                    on_release: root.setAnalysisChoice('Custom')
                    #on_release: root.show_loadFileDialog(path='~/', fileFilter=['*.py'], loadFunc=root.loadCustomAnalysis)
            Label:
                size_hint_y: .6
                padding: [20, 15]
                text_size: (750, None)
                font_size: 28
                halign: 'center'
                shorten: True
                shorten_from: 'left'
                text: root.analysisInfo
                color: root.textColor


    ### Output Box ------------------
    BoxLayout:
        size_hint: (1, None)
        height: 240
        BoxLayout:
            spacing: 10
            orientation: 'vertical'
            # box label
            SectionHeading:
                labelText: 'Output'
            BoxLayout:
                spacing: 10
                padding: [30, 5]
                Label:
                    size_hint_x: 2.5
                    padding: [20, 15]
                    text_size: (500, None)
                    shorten: True
                    shorten_from: 'left'
                    id: maskFile
                    text: root.GUI_settings.outputPath
                    font_size: 28
                    color: root.textColor
                # change output path button
                Button:
                    text: 'Change'
                    on_release: root.modifyOutputPath(currentOutputPath=root.GUI_settings.outputPath)
            BoxLayout:
                BoxLayout:
                    size_hint_x: 1.23
                CheckBox:
                    halign: 'right'
                    id: launchDashboardCheckbox
                    state: 'down' if root.GUI_settings.launchDashboard else 'normal'
                    on_active: root.setLaunchDashboardChoice()
                Label:
                    text: 'Launch Dashboard?'
                    color: root.textColor
                    halign: 'left'
                BoxLayout:
                    size_hint_x: 1.23


    ### Submit Box ------------------
    BoxLayout:
        size_hint_y: 1.5
        BoxLayout:
            orientation: 'vertical'
            Label:
                canvas.before:
                    Color:
                        rgba: .96,.15,.35,1
                    Line:
                        points: 25, self.center_y, self.width, self.center_y
                        width: 3.0
                        cap: 'square'

            # box label
            BoxLayout:
                padding: [150, 0]
                spacing: 10
                Button:
                    text: 'Submit'
                    on_release: root.submitGUI()


### Generic Load File Dialog Window #################################
<LoadFileDialog>:
    BoxLayout:
        font_size: '10sp'
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: root.path
            filters: root.fileFilter
            font_name: 'Roboto-Bold'

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Load"
                on_release: root.loadFunc(filechooser.path, filechooser.selection)
            Button:
                text: "Cancel"
                on_release: root.cancelFunc()


### Generic Select Path Dialog Window #################################
<ModifyPathDialog>:
    orientation: "vertical"
    BoxLayout:
        orientaton: "vertical"
        BoxLayout:
            FilePathInputField:
                id: inputPath
                size_hint_x: 2.5
                text: root.currentPath
                on_text:root.currentPath = inputPath.text
                font_size: 28
                padding: [15,15]
            Button:
                size_hint: (None, None)
                size: (65,65)
                spacing: 15
                padding: (15,15)
                background_normal: root.setupGUI_dir + '/images/openFileBrowser.png'
                allow_stretch: False
                on_release: root.launchFileBrowser()
    BoxLayout:
        padding: [60,10]
        Button:
            text: "Done"
            on_release: root.doneFunc(root.currentPath)


### Error Notification Pop-up Window #################################
<ErrorNotification>:
    BoxLayout:
        Label:
            text_size: self.size
            valign: 'top'
            text: root.errorMsg
