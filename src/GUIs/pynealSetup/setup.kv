#kivy 1.10.0
#:import split os.path.split

MainContainer:

<SectionHeading>:
    padding_y: 10.0
    Label:
        pos: [50+10, self.pos[1]]
        size: self.texture_size
        id: sectionLabel
        text: root.labelText
        size_hint_y: .8
        font_size: 35
        bold: True
        valign: 'middle'
        halign: 'left'
        text_size: self.size
        color: (1,1,1,1)
        canvas.before:
            Color:
                rgba: .96,.15,.35,1
            Line:
                points: 25, self.center_y, self.width, self.center_y
                width: 3.0
                cap: 'square'
            Color:
                rgba: .96,.15,.35,1
            Rectangle:
                pos: [50, self.pos[1]]
                size: [300, self.height]

<NumberInputField>:
    multiline: False
    write_tab: False
    size_hint_y: .8

<MainContainer>:
    padding: root.width * .02, root.height * .02
    spacing: "10dp"
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: 'vertical'
    ### Logo Box ------------------------
    BoxLayout:
        size_hint_y: 2
        Label:
            size_hint_x: 1.5
            text: 'Pyneal Logo'
            color: root.textColor
        Button:
            text: 'Load Settings'
            on_release: root.show_loadFileDialog(path='~/', fileFilter=['*.yaml'], loadFunc=root.loadSettings)

    ### Communication Box ------------------
    BoxLayout:
        size_hint_y: 3
        BoxLayout:
            spacing: 10
            orientation: 'vertical'
            # box label
            SectionHeading:
                labelText: 'Communication'
            # scanner port
            BoxLayout:
                padding: [20, 10]
                spacing: 20
                Label:
                    size_hint_x: 1.5
                    text_size: self.size
                    text: 'Scanner Port:'
                    color: root.textColor
                    halign: 'right'
                    valign: 'middle'
                NumberInputField:
                    id: scannerPort
                    text: str(root.GUI_settings.scannerPort)
                    on_text: root.GUI_settings.scannerPort = scannerPort.text
            # output port
            BoxLayout:
                padding: [20, 10]
                spacing: 20
                Label:
                    size_hint_x: 1.5
                    text_size: self.size
                    text: 'Output Port:'
                    color: root.textColor
                    halign: 'right'
                    valign: 'middle'
                NumberInputField:
                    id: outputPort
                    text: str(root.GUI_settings.outputPort)
                    on_text: root.GUI_settings.outputPort = outputPort.text


    ### Mask Box ------------------
    BoxLayout:
        size_hint_y: 3
        BoxLayout:
            orientation: 'vertical'
            # box label
            SectionHeading:
                # box label
                labelText: 'Mask'
            BoxLayout:
                # mask info
                Label:
                    size_hint_x: 1.5
                    id: maskFile
                    text: root.GUI_settings.maskFile
                    font_size: 16
                    color: root.textColor
                # load mask button
                Button:
                    text: 'Load Mask'
                    on_release: root.show_loadFileDialog(path='~/', fileFilter=['*.nii.gz'], loadFunc=root.loadMask)
            BoxLayout:
                CheckBox:
                    id: maskIsWeighted
                    size_hint_x: .25
                    state: 'down' if root.GUI_settings.maskIsWeighted else 'normal'
                    on_active: root.setMaskIsWeighted()
                Label:
                    text: 'Weighted Mask?'
                    color: root.textColor


    ### Preprocessing Box ------------------
    BoxLayout:
        size_hint_y: 2
        BoxLayout:
            orientation: 'vertical'
            # box label
            SectionHeading:
                labelText: 'Preprocessing'
            # num timepts
            BoxLayout:
                padding: [20, 10]
                spacing: 20
                Label:
                    size_hint_x: 1.5
                    text_size: self.size
                    text: '# of timepts:'
                    color: root.textColor
                    halign: 'right'
                    valign: 'middle'
                NumberInputField:
                    id: numTimepts
                    text: str(root.GUI_settings.numTimepts)
                    on_text: root.GUI_settings.numTimepts = numTimepts.text


    ### Analysis Box ------------------
    BoxLayout:
        size_hint_y: 3
        BoxLayout:
            orientation: 'vertical'
            # box label
            SectionHeading:
                labelText: 'Analysis'
            # buttons
            BoxLayout:
                #padding: [0, 20, 0, 0]
                padding: [45, 20]
                ToggleButton:
                    id: analysisChoice_average
                    text: 'Average'
                    group: 'analysisChoice'
                    state: 'down' if root.GUI_settings.analysisChoice == 'Average' else 'normal'
                    on_release: root.setAnalysisChoice('Average')
                ToggleButton:
                    id: analysisChoice_median
                    text: 'Median'
                    group: 'analysisChoice'
                    state: 'down' if root.GUI_settings.analysisChoice == 'Median' else 'normal'
                    on_release: root.setAnalysisChoice('Median')
                ToggleButton:
                    id: analysisChoice_custom
                    text: 'Custom'
                    group: 'analysisChoice'
                    state: 'down' if root.GUI_settings.analysisChoice not in ['Average', 'Median'] else 'normal'
                    on_release: root.show_loadFileDialog(path='~/', fileFilter=['*.py'], loadFunc=root.loadCustomAnalysis)
            Label:
                size_hint_y: .6
                text: root.analysisInfo
                color: root.textColor

    ### Submit Box ------------------
    BoxLayout:
        size_hint_y: 1.5
        BoxLayout:
            orientation: 'vertical'
            Label:
                canvas.before:
                    Color:
                        rgba: .96,.15,.35,1
                    Line:
                        points: 25, self.center_y, self.width, self.center_y
                        width: 3.0
                        cap: 'square'

            # box label
            BoxLayout:
                padding: [150, 0]
                spacing: 10
                Button:
                    text: 'Submit'
                    on_release: root.submitGUI()


### Generic Load File Dialog Window #################################
<LoadFileDialog>:
    BoxLayout:
        font_size: '10sp'
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: root.path
            filters: root.fileFilter
            font_name: 'Roboto-Bold'

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Load"
                on_release: root.loadFunc(filechooser.path, filechooser.selection)
            Button:
                text: "Cancel"
                on_release: root.cancelFileChooser()



### Error Notification Pop-up Window #################################
<ErrorNotification>:
    BoxLayout:
        Label:
            text_size: self.size
            valign: 'top'
            text: root.errorMsg
